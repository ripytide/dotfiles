fsync = False

[Account james.forsterer@gmail.com]
localrepository = james-local
remoterepository = james-remote
postsynchook = notmuch new

[Repository james-local]
type = Maildir
localfolders = ~/.mail/james.forsterer@gmail.com
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
							'important': '[Gmail]/Important',
                            'starred': '[Gmail]/Starred',
                            'bin':     '[Gmail]/Bin',
                            'archive': '[Gmail]/All Mail',
							'spam':    '[Gmail]/Spam'
                            }.get(folder, folder)

[Repository james-remote] maxconnections = 1
type = Gmail
remoteuser = james.forsterer@gmail.com
realdelete = no
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail':      'sent',
                            '[Gmail]/Starred':   'starred',
							'[Gmail]/Important': 'important',
                            '[Gmail]/Bin':     'bin',
                            '[Gmail]/All Mail':  'archive',
							'[Gmail]/Spam':      'spam'
                            }.get(folder, folder)

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl_version = tls1_2

[mbnames]
enabled = yes
filename = ~/.config/mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
