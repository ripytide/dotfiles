#
#BSPWM keybinds
#

#
# resize/movement/swap
#

# resize window depending on whether its floating/next to the left edge of moniter etc
super + shift + {y,n,e,o}
	smartresize.sh {west,south,north,east}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# swap window in direction
super + ctrl + {y,n,e,o}
	bspc node -s {west,south,north,east}

#
# focus
#

# focus the older nodes in history n=1, e=2, o=3 nodes ago
super + n
	focushistory.sh 2

# focus the next/previous window in the current desktop
super + {o,e}
	bspc node -f {prev,next}.local.!hidden.window

# focus the given moniter
super + {1-6}
	bspc desktop -f ^{1-6}

# focus on the 1st, 2nd, 3rd moniter with whatever desktop is currently active on it
super + {s,h,t}
	bspc monitor {DVI-D-0,DP-0,HDMI-0} -f

# focus on the other desktop on the current moniter
super + f
	bspc desktop -f last.local

#
# managing windows
#

# send to the given desktop
super + shift + {1-6}
	bspc node -d ^{1-6} --follow

# close and kill
super + j
	bspc node -c

# set the node flags
super + ctrl + {t,h,s}
	bspc node -g {marked,locked,sticky}

#
# toggling hiding all windows
#
super + y
	hideallwindows.sh
#
# changing layouts
#

# alternate between the tiled and monocle layout
super + i
	bspc desktop -l next

# toggle between tiled and pseudo_tiled modes
super + slash
    if [ -z "$(bspc query -N -n focused.pseudo_tiled)" ]; then \
        bspc node focused -t pseudo_tiled; \
    else \
        bspc node focused -t tiled; \
    fi

#
# changing current window opacity
#

# increment/decrement opacity of focused window; or set to max
super + {u,p,semicolon}
	picom-trans -c {-2,+4,100}

#
# wm independent hotkeys
#

# program launcher
super + space
	rofi -show drun

# terminal emulator
super + w
	kitty

# file explorer
super + r
	thunar

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# change all backgrounds
super + k
	changewallpaper.sh 0; changewallpaper.sh 2; changewallpaper.sh 1

#
# media controls
#

# volume control
super + {less,greater}
	python ~/scripts/changespotifyvolume.py {-5%,+5%}

# play/pause
super + l
	playerctl play-pause

# next/previous track
super + {comma,period}
	playerctl {previous,next}

#
# toggle polybar
#

 #Hide-show polybar
super + b
	polybar-msg cmd toggle;xdo raise -N Polybar

#
# take a screenshot
#

super + v
	flameshot gui
