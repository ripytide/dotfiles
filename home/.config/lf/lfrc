
# leave some space at the top and the bottom of the screen
set scrolloff 8

# dedicated keys for file opener actions
map o &mimeopen $f
map O $mimeopen --ask $f

# use '<delete>' key for either 'trash' or 'delete' command
map <delete> trash

map y updir
map n down
map e up
map o open
map <enter> open

map j search-next
map J search-prev

map h copy

cmd delete %rip "$fx"
cmd mkdir %{{
    printf "Make directory: "
    read ans
    mkdir $ans
}}
cmd nvimnewfile %{{
    printf "Nvim new file: "
    read ans
    nvim $ans
}}

set previewer colorbat

map md mkdir
map d
map dd delete
map x cut
map m mkdir
map t nvimnewfile

map a set hidden!
set hidden on
