{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.local/share/komorebi-application-specific-configuration/applications.json",

  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": false,

  "default_workspace_padding": 3,
  "default_container_padding": 3,

  "border": true,
  "border_width": 3,
  "border_offset": -1,
  "border_colours": {
    "unfocused": "#6fc1e3",
    "monocle": "#ff71b3",
    "single": "#80f080"
  },
  "border_style": "System",

  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        },
        {
          "name": "V",
          "layout": "BSP"
        },
        {
          "name": "VI",
          "layout": "BSP"
        },
        {
          "name": "VII",
          "layout": "BSP"
        }
      ]
    }
  ],

  "ignore_rules": [
    {
      "kind": "Title",
      "id": "WiRE Security Admin",
      "matching_strategy": "Equals"
    }
  ]
}
