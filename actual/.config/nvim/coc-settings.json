{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  },
  "rust-analyzer.diagnostics.disabled": [
    "mismatched-arg-count"
  ],
  "rust-analyzer.inlayHints.enable": false,
  "suggest.noselect": true
}
